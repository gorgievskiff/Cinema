@using Domain.DTO;
@model EditMovieDto


@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Movie";
}

<div class="container">
    <div class="content-heading">
        <div>
            Movie
            <div>
                <small>Edit existing movie</small>
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-12 pt-3 ">
        <div class="card rounded">
            <div class="card-header text-white rounded">
                <div class="card-title text-dark">Edit movie</div>
            </div>
            <div>
                <div class="card-body">
                    <form asp-action="Edit" asp-controller="Movies">
                        <input asp-for="Id" hidden />
                        <div class="text-sm mb-3">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Name">Movie Name</label>
                                    <input asp-for="Name" class="form-control rounded" aria-describedby="genreHelp" placeholder="Enter movie name">
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="SelectedGenreId">Genre</label>
                                    @Html.DropDownListFor(x => x.SelectedGenreId, new SelectList(ViewBag.Genres, "Id", "Name"),"Please select genre", new{@class = "form-control rounded"})
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Rating">Movie Rating</label>
                                    <input asp-for="Rating" class="form-control rounded" aria-describedby="genreHelp" placeholder="Enter movie rating">
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Year">Year</label>
                                    <input asp-for="Year" class="form-control rounded" aria-describedby="genreHelp" placeholder="Enter year">
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                <label asp-for="ImgUrl">Image url</label>
                                <input asp-for="ImgUrl" class="form-control rounded" aria-describedby="genreHelp" placeholder="Enter image url">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary rounded">Submit</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>



